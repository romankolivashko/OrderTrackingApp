@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h3>Here are all the orders placed by this vendor:</h3>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Name</a></li>
}
</ol>

<p><button><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></button></p>
<p><button><a href='/vendors'>Return to vendors list</a></button></p>
<p><button><a href='/'>Return to Main Page</a></button></p>